<header class="sticky top-0 z-50 bg-[#0b1422]/90 backdrop-blur-md">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center">
      <!-- ЛОГО + ИМЯ -->
      <a href="/" class="flex items-center gap-3 shrink-0 mr-6">
        <img src="/assets/logo.svg" alt="Wajciuk Media" class="h-10 w-10 md:h-12 md:w-12" />
        <div class="leading-tight">
          <span class="block text-xl font-extrabold">Sergej Wajciuk</span>
          
          <span class="block text-[12px] text-white/60">Whitehat Lead Gen — PL/EU</span>
        </div>
      </a>

      <!-- НАВИГАЦИЯ (ДЕСКТОП) -->
      <nav class="ml-auto hidden md:flex items-center gap-8">
        <a href="/oferta/" class="inline-block py-2 text-white/80 hover:text-white">Oferta</a>
        <a href="/kontakt/" class="inline-block py-2 text-white/80 hover:text-white">Kontakt</a>
        <a href="/prywatnosc/" class="inline-block py-2 text-white/80 hover:text-white">Prywatność</a>
      </nav>

      <!-- БУРГЕР (МОБИЛЬНЫЙ) -->
      <button
        id="mnav-btn"
        class="ml-auto md:hidden inline-flex items-center justify-center rounded-xl p-2 hover:bg-white/5"
        aria-label="Menu" aria-expanded="false" aria-controls="mnav"
      >
        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
      </button>
    </div>

    <!-- МОБИЛЬНОЕ МЕНЮ -->
    <div id="mnav" class="md:hidden hidden pb-3">
      <nav class="flex flex-col gap-2 pt-2 border-t border-white/10">
        <a href="/oferta/" class="px-1 py-2 text-white/90 hover:text-white">Oferta</a>
        <a href="/kontakt/" class="px-1 py-2 text-white/90 hover:text-white">Kontakt</a>
        <a href="/prywatnosc/" class="px-1 py-2 text-white/90 hover:text-white">Prywatność</a>
      </nav>
    </div>
  </div>
</header>

<script is:inline>
  const b = document.getElementById('mnav-btn');
  const p = document.getElementById('mnav');
  b?.addEventListener('click', () => {
    const open = b.getAttribute('aria-expanded') === 'true';
    b.setAttribute('aria-expanded', String(!open));
    p.classList.toggle('hidden');
  });
</script>