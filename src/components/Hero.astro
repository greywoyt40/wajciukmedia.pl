    <div class="absolute inset-0 p-6 flex items-end">
      <div>
        <h1 class="text-2xl sm:text-4xl font-extrabold leading-tight mb-1">Sergej Wajciuk: {title}</h1>
        <p class="text-muted max-w-2xl">{lead}</p>
        <div class="mt-3">
          <a class="btn" href="/kontakt">Napisz wiadomość</a>
        </div>
        <div class="mt-3 flex gap-2 flex-wrap">
          <span class="badge">✅ Google Ads (Search)</span>
          <span class="badge">✅ RODO</span>
          <span class="badge">✅ Whitehat only</span>
        </div>
      </div>
    </div>
  </div>
</section>
