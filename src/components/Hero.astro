<section class="container mt-2">
  <div class="relative border border-line rounded-2xl overflow-hidden">
    <img src="/assets/hero.jpg" alt="Miasto nocą — leady bez ryzyka" class="w-full h-[260px] sm:h-[360px] md:h-[420px] lg:h-[520px] object-cover" />
